<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>
    <!-- CSS -->
    <link rel="stylesheet" href="/public/css/style.css" />
    <link rel="stylesheet" href="/public/css/uploadPhoto.css" />
    <title>Upload Cover Photo</title>
  </head>
  <body>
    <!-- nav -->
    <%-include("../partials/navbar.ejs") %>
    <div class="form-container">
      <!-- icon -->
      <h1>Upload Cover photo</h1>
      <p>
        <!-- upload icon -->
      </p>
      <!-- error -->
      <%if(error){ %>
      <small class="error">
        <i class="fas fa-exclamation-circle"> <%= error %> </i>
      </small>
      <% } %>

      <form
        action="/api/v1/users/cover-photo-upload?_method=put"
        method="POST"
        enctype="multipart/form-data"
      >
        <label for="email">Select Imgae</label>
        <input type="file" name="profile" id="image" />
        <button type="submit">
          <i class="fas fa-upload"></i>
        </button>
      </form>
    </div>
    <!-- footer -->
    <%- include("../partials/footer.ejs") %>
    <!-- footer -->
  </body>
</html>
